<Window x:Class="QuickRun.Windows.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ConfigForm" Height="450" Width="400"
        ResizeMode="NoResize" WindowStyle="None" SizeToContent="Height">
    <DockPanel x:Name="mainPanel">
        <DockPanel x:Name="titleBar" Background="DarkGray" DockPanel.Dock="Top">
            <Button x:Name="closeBtn" Focusable="False" Background="Gray" Content="X" FontSize="16" Padding="10,0" BorderThickness="0" DockPanel.Dock="Right"/>
            <Label x:Name="titleLabel" Content="Config"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="20,0,20,20">
            <!--<Button/>-->
        </DockPanel>
        <Grid x:Name="dataGrid" Height="Auto" Width="Auto" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.RowSpan="99" Grid.Column="1" Width="2" HorizontalAlignment="Stretch" Background="White"/>
        </Grid>
    </DockPanel>
</Window>
